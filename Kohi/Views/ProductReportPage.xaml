<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Kohi.Views.ProductReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kohi.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    xmlns:editors="using:Syncfusion.UI.Xaml.Editors"
    xmlns:syncfusion="using:Syncfusion.UI.Xaml.Chat"
    xmlns:dataGrid="using:Syncfusion.UI.Xaml.DataGrid"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid RowSpacing="10" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- TextBlock -->
                <RowDefinition Height="Auto"/>
                <!-- ComboBox -->
                <RowDefinition Height="Auto"/>
                <!-- Chart (Inbound/Outbound) -->
                <RowDefinition Height="Auto"/>
                <!-- AI Assist -->
                <RowDefinition Height="Auto"/>
                <!-- Pie Chart (Top Products) -->
                <RowDefinition Height="Auto"/>
                <!-- DataGrid (Top Products) -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Hàng hóa"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Margin="0,0,0,10"/>

            <!-- Ingredient Selection -->
            <editors:SfComboBox Grid.Row="1"
                                IsEditable="True"
                                IsFilteringEnabled="True"
                                TextSearchMode="StartsWith"
                                ItemsSource="{x:Bind ViewModel.IngredientNames, Mode=OneWay}"
                                SelectedItem="{x:Bind ViewModel.SelectedIngredientName, Mode=TwoWay}"
                                PlaceholderText="Select Ingredient"
                                Width="300"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,10"/>

            <!-- Inbound/Outbound Chart -->
            <chart:SfCartesianChart Grid.Row="2"
                                    Height="400"
                                    Margin="0,0,0,10">
                <chart:SfCartesianChart.XAxes>
                    <chart:DateTimeAxis IntervalType="Days" Interval="1">
                        <chart:DateTimeAxis.LabelStyle>
                            <chart:LabelStyle LabelFormat="dd MMM"/>
                        </chart:DateTimeAxis.LabelStyle>
                    </chart:DateTimeAxis>
                </chart:SfCartesianChart.XAxes>

                <chart:SfCartesianChart.YAxes>
                    <chart:NumericalAxis Minimum="0" 
                                         Interval="25"
                                         ShowMajorGridLines="True">
                        <chart:NumericalAxis.LabelStyle>
                            <chart:LabelStyle LabelFormat="N0"/>
                        </chart:NumericalAxis.LabelStyle>
                    </chart:NumericalAxis>
                </chart:SfCartesianChart.YAxes>

                <chart:SfCartesianChart.Legend>
                    <chart:ChartLegend IconHeight="13" IconWidth="13"/>
                </chart:SfCartesianChart.Legend>

                <!-- Inbound Series -->
                <chart:SplineAreaSeries ItemsSource="{x:Bind ViewModel.Data, Mode=OneWay}"
                                        XBindingPath="XValue"
                                        YBindingPath="YValue"
                                        Label="Nhập kho"
                                        LegendIcon="Circle" 
                                        EnableAnimation="True" 
                                        EnableTooltip="True"/>

                <!-- Outbound Series -->
                <chart:SplineAreaSeries ItemsSource="{x:Bind ViewModel.OutboundData, Mode=OneWay}"
                                        XBindingPath="XValue"
                                        YBindingPath="YValue"
                                        Label="Xuất kho"
                                        LegendIcon="Circle" 
                                        EnableAnimation="True" 
                                        EnableTooltip="True"/>
            </chart:SfCartesianChart>

            <!-- AI Assist -->
            <syncfusion:SfAIAssistView Grid.Row="3" 
                                      CurrentUser="{x:Bind ViewModel.CurrentUser}" 
                                      Suggestions="{x:Bind ViewModel.Suggestion}" 
                                      SuggestionSelected="SfAIAssistView_SuggestionSelected"
                                      Messages="{x:Bind ViewModel.Chats}"
                                      Margin="0,0,0,10"/>

            <!-- Top Products Pie Chart -->
            <chart:SfCircularChart Grid.Row="4"
                                   Header="Top 10 Sản Phẩm Phổ Biến"
                                   Height="300"
                                   Margin="0,0,0,10">
                <chart:SfCircularChart.Legend>
                    <chart:ChartLegend IconWidth="13" IconHeight="13"/>
                </chart:SfCircularChart.Legend>
                <chart:PieSeries ItemsSource="{x:Bind ViewModel.TopProducts, Mode=OneWay}"
                                 XBindingPath="Name"
                                 YBindingPath="TotalQuantity"
                                 Label="Sản Phẩm"
                                 EnableAnimation="True"
                                 EnableTooltip="True"
                                 ShowDataLabels="True">
                    <chart:PieSeries.TooltipTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Item.Name}" 
                                       Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                        </DataTemplate>
                    </chart:PieSeries.TooltipTemplate>
                    <chart:PieSeries.DataLabelSettings>
                        <chart:CircularDataLabelSettings ShowConnectorLine="True"
                                                        Position="OutsideExtended"
                                                        Background="Transparent"
                                                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                        />
                    </chart:PieSeries.DataLabelSettings>
                </chart:PieSeries>
            </chart:SfCircularChart>

            <!-- Top Products DataGrid -->
            <dataGrid:SfDataGrid Grid.Row="5"
                                 x:Name="sfDataGrid"
                                 ItemsSource="{x:Bind ViewModel.TopProducts, Mode=OneWay}"
                                 AutoGenerateColumns="False"
                                 AllowSorting="True"
                                 Width="Auto"
                                 Margin="0,0,0,10">
                <dataGrid:SfDataGrid.Columns>
                    <dataGrid:GridTextColumn HeaderText="Tên sản phẩm"
                                             MappingName="Name"
                                             />
                    <dataGrid:GridTextColumn HeaderText="Số lượng"
                                             MappingName="TotalQuantity"
                                             TextAlignment="Right"/>
                    <dataGrid:GridTextColumn HeaderText="Doanh thu"
                                             MappingName="TotalRevenue"
                                             TextAlignment="Right"/>
                </dataGrid:SfDataGrid.Columns>
            </dataGrid:SfDataGrid>
        </Grid>
    </ScrollViewer>
</Page>